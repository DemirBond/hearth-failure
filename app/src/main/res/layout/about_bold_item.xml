<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/label_cell_height"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <com.szg_tech.hearthfailure.core.views.CustomTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/section_bg_highlight"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/label_cell_padding_bottom"
        android:paddingEnd="@dimen/cell_padding_right"
        android:paddingStart="@dimen/cell_padding_left"
        android:paddingTop="@dimen/label_cell_padding_top"
        app:type="subheading_section" />

</android.support.v7.widget.CardView>
